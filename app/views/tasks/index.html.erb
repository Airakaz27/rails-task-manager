<div class="container mt-5">
  <h1 class="mb-4">My tasks</h1>
  <ul class="list-group mb-4">
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <li class="list-group-item link-underline-light"><i class="fa-regular fa-square-check"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%><i class="fa-solid fa-trash"></i><% end %></li>
      <% else %>
        <li class="list-group-item link-underline-light"><i class="fa-regular fa-square"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%><i class="fa-solid fa-trash"></i><% end %></li>
      <% end %>
    <% end %>
  </ul>
  <%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
</div>
