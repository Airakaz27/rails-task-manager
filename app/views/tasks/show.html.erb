<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h1 class="mb-3"><%= @task.title %></h1>
    <%= link_to "Edit the task", edit_task_path(@task) %>
  </div>
  <p class="alert alert-secondary"><%= @task.details %></p>
  <%if @task.completed %>
    <div class="d-flex align-items-center">
      <i class="fa-regular fa-square-check"></i>
      <p>This task is completed</p>
    </div>
  <% else %>
    <div class="d-flex align-items-center">
      <i class="fa-regular fa-square-check"></i>
      <p>This task is not completed yet</p>
    </div>
  <% end %>
  <hr class="solid">
  <%= link_to "Back to list", tasks_path %>
</div>
